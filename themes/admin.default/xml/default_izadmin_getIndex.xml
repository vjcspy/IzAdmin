            <asset name="bootstrap"/>
            <asset name="jquery"/>
            <asset name="angular-aria"/>
            <asset name="angular-messages"/>
            <asset name="angular-animate"/>
            <asset name="angular-ui-router"/>
            <asset name="oclazyload"/>
            <asset name="angular-sanitize"/>
            <asset name="angular-toastr"/>
